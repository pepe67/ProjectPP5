{% extends "ProjectBundle::layout.html.twig" %}
{% block title %}Nowe zamówienie{% endblock %}


{% block content %}

    <div class="section group">
		<div class="content_top">
			<div class="heading">
				<h3>Zamawianie filmów</h3>
			</div>
		<div class="clear"></div>
	</div>
	<div class="section group">
		<table width="100%">
			<thead>
				<tr align="center">
					<td>Lp</td>
					<td>Tytuł</td>
					<td>Kategoria</td>
					<td>Cena</td>
				</tr>
			</thead>
			<tbody>
			{% set counter = 1 %}
			{% for movie in movies %}
				<tr>
					<td>{{ counter }}</td>
					<td>{{ movie.title }}</td>
					<td>{{ movie.category }}</td>
					<td>{{ movie.price }} zł</td>
				</tr>
				{% set counter = counter + 1 %}
				{% endfor %}
			</tbody>
		</table>	
	
	
	</div>
	<div class="section group">
	<div class="your-review">
    {{ form(form) }}
	</div>
    </div>

{% endblock %}
