{% extends "ProjectBundle::layout.html.twig" %}


{% block content %}

    <h1>OrderMovie list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Orderedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('project_orders_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.orderedAt %}{{ entity.orderedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('project_orders_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('project_orders_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('project_orders_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
