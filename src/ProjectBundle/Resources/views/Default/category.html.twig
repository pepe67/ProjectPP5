{% extends "ProjectBundle::layout.html.twig" %}
{% block title %}Kategoria - {{ category.getName }}{% endblock %}

{% block content %}

<div class="header_bottom_left">				
	<div class="categories">
		<ul>
			<h3>Kategorie</h3>
			{% for category in categories %}
				<li><a href="/category/{{category.name}}/show">{{category.name}}</a></li>
			{% endfor %}
		</ul>
	</div>					
</div>
<div class="header_bottom_right">					 
	<div class="content_top">
		<div class="heading">
			<h3>Filmy z Kategorii {{ category.getName }} </h3>
		</div>
	<div class="clear"></div>
</div>
									


{% for row in movies|batch(3) %}
	<div class="section group">
    
        {% for movie in row %}
            
                
				<div class="grid_1_of_3 images_1_of_3">        
		<a href="/movie/{{ movie.slug }}/show"><h2>{{ movie.title }} </h2><img src="{{ movie.posterURL }}" alt="{{ movie.title }}" />
		 </a>
		<div class="price-details">
			<div class="price-number">
				<p><span class="rupees">{{ movie.price }} PLN</span></p>
			 </div>
			<div class="add-cart">								
				<h4><a href="preview.html">Dodaj do koszyka</a></h4>
			</div>
			<div class="clear"></div>
		</div>
	</div>
				
				
				
            
        {% endfor %}
    </div>	
{% endfor %}

				
	

		
			 

{% endblock %}